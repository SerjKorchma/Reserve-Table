<form name="form" ng-submit="vm.save(form)" novalidate>
  <div class="modal-header">
    <h3 class="modal-title">Reserve Table â„–{{vm.reservation.table_number}}</h3>
  </div>

  <div class="modal-body">
    <div class="container-fluid">
      <div class='col-sm-6'>
        <div class="alert alert-danger" ng-repeat="error in vm.errors">{{error}}</div>

        <div class="form-group" ng-class="{'has-error': (form.$submitted || form.$touched) && form.date.$invalid}">
          <label for="" class="control-label">Date</label>
          <input type="text" ng-datepicker class="form-control" name="date" ng-model="vm.reservation.date" required/>

          <div class="help-block" ng-show="(form.$submitted || form.$touched) && form.date.$error.required">
            is required
          </div>
        </div>

        <div class="form-group" ng-class="{'has-error': (form.$submitted || form.$touched) && form.start_time.$invalid}">
          <label for="" class="control-label">From</label>
          <input type="time" class="form-control" name="start_time" ng-model="vm.reservation.start_time" required/>

          <div class="help-block" ng-show="(form.$submitted || form.$touched) && form.start_time.$error.required">
            is required
          </div>
        </div>
        <div class="form-group" ng-class="{'has-error': (form.$submitted || form.$touched) && form.end_time.$invalid}">
          <label for="" class="control-label">To</label>
          <input type="time" class="form-control" name="end_time" ng-model="vm.reservation.end_time" required/>

          <div class="help-block" ng-show="(form.$submitted || form.$touched) && form.end_time.$error.required">
            is required
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button type="submit" class="btn btn-primary">Reserve!</button>
    <button type="button" ng-click="vm.close()" class="btn btn-default" >Close</button>
  </div>
</form>